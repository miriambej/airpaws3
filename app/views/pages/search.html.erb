<div id="main">
  <div id="left">
    <!-- SEARCH PANEL -->
    <div class="row">
      <br/>
      <div class="collapse" id="collapsePanel">
        <%= search_form_for @search, url: search_path do %>

          <div class="row">
            <div class="col-md-8">
              <label>Price range:</label>
            </div>
            <div class="col-md-2">
              <label>Min Price:</label>
              <!--  gteq: greater than equal the price-->
              <%= f.text_field :price_gteq, class: "form-control" %>
            </div>
            <div class="col-md-2">
              <label>Max Price:</label>
              <!--  lteq: less than equal the price-->
              <%= f.text_field :price_lteq, class: "form-control" %>
            </div>
          </div>
          <hr/>

          <div class="row">
            <div class="col-md-6">
              <%= text_field_tag :start_date, params[:start_date], readonly: true, placeholder: "Drop off", class: "form-control datepicker" %>
            </div>
            <div class="col-md-6">
              <%= text_field_tag :end_date, params[:end_date], readonly: true, placeholder: "Pick up", class: "form-control datepicker" %>
            </div>
          </div>
          <hr/>

          <div class="row">
            <div class="col-md-4">
              <div class="form-group select">
                <label>Accommodate</label>
                <%= f.select :accommodate_gteq, [["1", 1], ["2", 2 ], ["3", 3 ], ["4+", 4 ]],
                id: "accommodate", prompt: "Select...", class: "form-control" %>
              </div>
            </div>
          </div>
          <hr/>

          <div class="row">
            <div class="col-md-4">
              <%= check_box_tag "q[is_toys]", true %> Toys
            </div>
            <div class="col-md-4">
              <%= check_box_tag "q[is_treats]", true %> Treats
            </div>
            <div class="col-md-4">
              <%= check_box_tag "q[is_food]", true %> Food
            </div>
            <div class="col-md-4">
              <%= check_box_tag "q[is_garden]", true %> Garden
            </div>
            <div class="col-md-4">
              <%= check_box_tag "q[is_exercise]", true %> Exercise
            </div>
          </div>
          <hr/>

          <div class="row text-center">
            <%= f.submit "Search", class: "btn btn-form" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <hr/>






  <div id="right">
    <!-- GOOGLE MAP WILL BE HERE -->
  </div>
</div>

<script>
  $('#start_date').datepicker({
    dateFormat: 'dd-mm-yy',
    minDate: 0,
    maxDate: '3m',
    onSelect: function(selected) {
      $('#end_date').datepicker("option", "minDate", selected);
      $('#end_date').attr("disabled", false);
    }
  });

  $('#end_date').datepicker({
    dateFormat: 'dd-mm-yy',
    minDate: 0,
    maxDate: '3m',
    onSelect: function(selected) {
      $('#start_date').datepicker("option", "maxDate", selected);
    }
  });

</script>
